<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/_head')  %>
  <!-- Page-specific -->
  <title>Your Story</title>
  <link rel="stylesheet" href="/styles/front_page.css" type="text/css" />
</head>
<body>
  <%- include('partials/_header')  %>
  <div class="intro_scroll">
    <p id="title">Your Story</p>
    <p>Collaborative story-telling made simple.</p>
    <form action="/stories/create_story" method="GET">
      <button class="create_story">Create a Story</button>
    </form>
    <br><br>
    <i class="fas fa-angle-double-down"></i>
  </div>
  <main>
    <br>
    <div class="featured_stories">
      <h1>Featured Stories</h1>
      <section class="featured">
        <% for (let story in stories) { %>
          <% if (stories[story]["featured"]) { %>
            <div>
              <img src='<%= stories[story]["photo_url"] %>' height="300" width="400">
              <a href=""><h3><%= stories[story]["title"] %></h3></a>
              <p><%= stories[story]["description"] %></p>
            </div>
          <% } %>
        <% } %>
      </section>
    </div>
    <br>
    <div class="all_stories">

      <h1>All Stories</h1>
      <table class="stories">
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Status</th>
          <th>Creator</th>
        </tr>
        <% for (let story in stories) { %>
          <tr>
            <td class="title">
            <a href=""><%= stories[story]["title"] %></a>
            </td>
            <td><%= stories[story]["description"] %></td>
            <td><%= stories[story]["status"] %></td>
            <td><%= stories[story]["creator"] %></td>
          </tr>
        <% } %>
      </table>
    </div>
    <br><br>
  </main>
    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>
